# ───────────────────────────
# Core app
# ───────────────────────────
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
EU_FUNCTION_REGION=dub1   # Vercel EU region (e.g., dub1, fra1, cdg1, arn1)

# ───────────────────────────
# Database (Postgres)
# ───────────────────────────
# Neon (EU) or Supabase (EU). Keep sslmode=require for serverless.
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# ───────────────────────────
# Auth (NextAuth)
# ───────────────────────────
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=PLEASE_GENERATE_A_LONG_RANDOM_32+_CHAR_SECRET

# ───────────────────────────
# Email (Resend/Postmark)
# ───────────────────────────
EMAIL_FROM=hello@hormonegroup.ie
RESEND_API_KEY=

# ───────────────────────────
# Stripe
# ───────────────────────────
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUB_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional per-SKU price ids (fill later)
STRIPE_PRICE_TEST_ONETIME=
STRIPE_PRICE_TEST_MONTHLY=
STRIPE_PRICE_VITALITY=
STRIPE_PRICE_APEX=

# ───────────────────────────
# CMS (Sanity)
# ───────────────────────────
SANITY_PROJECT_ID=
SANITY_DATASET=production
SANITY_READ_TOKEN=

# ───────────────────────────
# Booking / Hybrid toggles
# ───────────────────────────
BOOKING_PROVIDER=calcom
CALCOM_ORG=hormonegroup

SHIPPING_CARRIER=anpost   # anpost|ups
AI_CHECKER_ENABLED=false
CMS_DOWN_FALLBACK=mdx     # render MDX if CMS is down

# ───────────────────────────
# Feature Flags (toggle features)
# ───────────────────────────
AFFILIATES_ENABLED=false
LOYALTY_ENABLED=false

# ───────────────────────────
# Analytics / Observability (optional)
# ───────────────────────────
NEXT_PUBLIC_GA_MEASUREMENT_ID=
SENTRY_DSN=





